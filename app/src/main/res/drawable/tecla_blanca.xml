<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Estado presionado -->
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <solid android:color="#E0E0E0"/>
      <corners android:radius="8dp"/>
      <stroke
          android:width="2dp"
          android:color="#333333"/>
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp"/>
    </shape>
  </item>

  <!-- Estado normal -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#FFFFFF"/>
      <corners android:radius="8dp"/>
      <stroke
          android:width="2dp"
          android:color="#333333"/>
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp"/>
    </shape>
  </item>
</selector>

